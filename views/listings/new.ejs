<% layout("/layouts/boilerplate") %>
<body>
  <h3 class="mt-3">Create a new Listing</h3>

  <div class="row">
    <div class="col-8 offset-2">
      <form
        action="/listings"
        class="needs-validation"
        method="post"
        novalidate
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            type="text"
            name="listing[title]"
            placeholder="Add a catchy title"
            class="form-control"
            required
          />

          <div class="valid-feedback">Title looks good!</div>
          <div class="invalid-feedback">write title here</div>
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea
            name="listing[description]"
            id=""
            class="form-control"
            required
          ></textarea>
          <div class="invalid-feedback">Please enter short Description</div>
        </div>

        <div class="mb-3">
          <label for="category" class="form-label">Category</label>
          <select
            class="form-select"
            aria-label="Default select example"
            id="category"
            name="listing[category]"
          >
            <option selected>Open this select menu</option>
            <option value="trending">Trending</option>
            <option value="rooms">Rooms</option>
            <option value="iconic citites">Iconic Citites</option>
            <option value="mountains">Mountains</option>
            <option value="castles">Castles</option>
            <option value="amazing pools">Amazing pools</option>
            <option value="camping">Camping</option>
            <option value="farms">Farms</option>
            <option value="arctic">Arctic</option>
            <option value="domes">Domes</option>
            <option value="boat">Boat</option>
          </select>
        </div>

        <div class="mb-3 mt-3">
          <label for="image" class="form-label">Upload Image</label>
          <input type="file" name="listing[image]" class="form-control" />
        </div>
        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="title" class="form-label">Price</label>
            <input
              name="listing[price]"
              placeholder="1200"
              required
              class="form-control"
            />
            <div class="invalid-feedback">Price should be valid</div>
          </div>

          <div class="mb-3 col-md-8">
            <label for="title" class="form-label">Country</label>
            <input
              type="text"
              name="listing[country]"
              placeholder="India"
              required
              class="form-control"
            />
            <div class="invalid-feedback">Country name Should be valid</div>
          </div>
        </div>

        <div class="mb-3">
          <label
            for="location
                "
            class="form-label"
            >Location</label
          >
          <input
            type="text"
            name="listing[location]"
            placeholder="Rajasthan"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Location Should be valid</div>
        </div>

        <br /><br />
        <button class="btn btn-dark add-btn">Add</button>
        <br /><br />
      </form>
    </div>
  </div>
</body>
